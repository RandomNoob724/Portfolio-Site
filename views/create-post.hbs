<main>
    <br>
    <div class="jumbotron container">
        <form class="form-createpost form" method="POST" action="/blog/create">
            <h1 class="text-center">Create blog-post</h1>
            <div class="text-center mb-4">
                <h1 class="h3 mb-3 font-weight-normal">Write new post</h1>
            </div>
            <br>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="form-label-group">
                <input name="blogpostHeader" type="text" id="blogpostHeader" class="form-control" placeholder="Blogpost Header" value="{{postHeader}}" maxlength="50">
            </div>
            <br>
            <div class="form-label-group">
                <textarea name="blogpostText" class="form-control" placeholder="Main content" rows="20" maxlength="500">{{postText}}</textarea>
            </div>
            <br>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Post</button>
        </form>
    </div>
</main>
