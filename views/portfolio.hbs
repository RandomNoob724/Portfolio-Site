<h1>Projects</h1>
<table class="table table-dark" id="project-table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">description</th>
      <th scope="col">Link</th>
    </tr>
  </thead>
  <tbody>
    {{#if projects.length}}
    {{#each projects}}
        <tr>
        <th scope="row">Project</th>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td><a href="{{link}}" target="_blank">link</a></td>
        </tr>
    {{/each}}
    {{else}}
        <td>No</td>
        <td>Projects</td>
        <td>Found</td>
    {{/if}}
  </tbody>
</table>