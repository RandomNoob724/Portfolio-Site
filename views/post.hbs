<head>
    <link rel="stylesheet" href="blogpost.css">
</head>
<div class="container">
    <div class="row">
      {{#if isLoggedIn}}
        <form method="POST">
            <a href="/blog/{{blogpost.blogpostID}}/delete-post" class="btn btn-danger">Delete</a>
        </form>
        <br>
        <form method="GET">
            <a href="/blog/{{blogpost.blogpostID}}/edit" class="btn btn-secondary">Edit</a>
        </form>
      {{/if}}
      <!-- Post Content Column -->
      <div class="col-lg-12">
        <!-- Title -->
        <h1 class="mt-4">{{blogpost.blogpostHeader}}</h1>
        <!-- Author -->
        <p class="lead">
          by
          <a href="#">Emil Persson</a>
        </p>
        <hr>
        <!-- Date/Time -->
        <p>Posted on {{blogpost.blogpostDate}}</p>
        <hr>
        <!-- Preview Image -->
        <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">
        <hr>
        <!-- Post Content -->
        {{{blogpost.blogpostText}}}
        <hr>

        <h3>Comments</h3>
        {{#if comments.length}}
          {{#each comments}}
            <!-- Single Comment -->
            <div class="media mb-4">
              <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
              <div class="media-body">
                <h5 class="mt-0">{{commentPublisher}}</h5>
                <p>{{commentText}}</p>
              </div>
            </div>
          {{/each}}
        {{/if}}
        <!-- Comments Form -->
        <div class="card my-4">
          <h5 class="card-header">Leave a Comment:</h5>
          <div class="card-body">
            <form class="form" action="/comment/{{blogpost.blogpostID}}/publish-comment" method="POST">
              <div class="form-group">
                <input class="form-control" type="text" name="commenterName" placeholder="Input your name here">
                <textarea class="form-control mt-3" rows="3" name="commentMainText" placeholder="Input comment text here"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
        </div>
      </div>
    </div>
</div>